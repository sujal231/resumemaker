<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".s3MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtpersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#000000"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:text="Education"/>


            <EditText
                android:id="@+id/edtschool"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/btn3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:hint=" school Name"/>

            <EditText
                android:id="@+id/edtcollege"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/btn3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:hint=" college name"/>

            <EditText
                android:id="@+id/edtdegree"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/btn3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:hint=" Degree "/>


            <EditText
                android:id="@+id/edtstdtenpr"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/btn3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:hint=" std 10 pr "/>


            <EditText
                android:id="@+id/edtstdtwelvepr"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/btn3"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:hint=" std 12 pr"/>


            <Button
                android:id="@+id/btnnextc"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn4"
                android:gravity="center"
                android:text="Next"
                android:textSize="18dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>