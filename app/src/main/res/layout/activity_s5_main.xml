<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".s5MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtskill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#000000"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:text="skill "/>

            <CheckBox
                android:id="@+id/problemsolving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problem Solving Skill"/>

            <CheckBox
                android:id="@+id/criticalthinking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Critical Thinking Skill"/>

            <CheckBox
                android:id="@+id/projectmanagementney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Management skill"/>

            <CheckBox
                android:id="@+id/digitalmarketing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digital Marketing skill"/>

            <CheckBox
                android:id="@+id/communication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Communication skill"/>

            <CheckBox
                android:id="@+id/teamwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teamwork skill"/>

            <Button
                android:id="@+id/btnnexte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF2BC49D"
                android:gravity="center"
                android:text="Next"
                android:textSize="18dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>